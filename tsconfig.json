{
  "compilerOptions": {
    "target": "ESNext",                          // Especifica o alvo de compilação do JavaScript
    "module": "CommonJS",                        // Especifica o sistema de módulos
    "strict": true,                              // Ativa todas as verificações de tipo estritas
    "esModuleInterop": true,                     // Habilita interoperabilidade entre módulos CommonJS e ESModules
    "skipLibCheck": true,                        // Ignora a verificação de tipos em arquivos de declaração
    "forceConsistentCasingInFileNames": true,    // Força consistência de letras maiúsculas/minúsculas em nomes de arquivos
    "outDir": "./dist",                          // Diretório de saída para os arquivos compilados
    "rootDir": "./src",                          // Diretório raiz dos arquivos de entrada
    "resolveJsonModule": true,                   // Permite a importação de arquivos JSON
    "sourceMap": true                            // Gera arquivos de mapeamento de origem (.map)
  },
  "include": ["src/*/"],                       // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules"]                    // Exclui a pasta node_modules
}